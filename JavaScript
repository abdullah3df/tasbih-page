function updateVisitorCount() {
  let count = localStorage.getItem('visitors') || 0;
  count++;
  localStorage.setItem('visitors', count);
  document.getElementById('visitorsCount').textContent = `Ø¹Ø¯Ø¯ Ø§Ù„Ø²ÙˆØ§Ø±: ${count}`;
}
